{
  "extends": [
    "airbnb", 
    "airbnb/hooks"
  ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "no-console": "off",
    "no-plusplus": "off",
    "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "arrow-body-style": "off",
  },
  "globals": {
    "document": true,
    "window": true
  },
}